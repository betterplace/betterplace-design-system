{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowJs": true
  },

  "exclude": ["node_modules", "dist"],
  "include": ["figma/**/*", "generator/**/*", "src/lib/shared/themes.ts", "config/components.json", "src/**/*.lock.ts"],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc"
  }
}
