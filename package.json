{
  "resolutions": {
    "@types/react": "^17.0.10"
  },
  "name": "betterplace-design-system",
  "author": "betterplace <developers@betterplace.org>",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "main": "./dist/betterplace-design-system.umd.js",
  "module": "./dist/betterplace-design-system.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/betterplace-design-system.es.js",
      "require": "./dist/betterplace-design-system.umd.js"
    }
  },
  "scripts": {
    "setup": "./script/setup",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "figma::tokens": "ts-node -r dotenv/config --project ./tsconfig.node.json -O '{\"module\": \"commonjs\"}' figma/fetch_tokens.ts PJ7OUutWRrSHW6qgaPNW1l",
    "figma::components": "ts-node -r dotenv/config --project ./tsconfig.node.json -O '{\"module\": \"commonjs\"}' figma/fetch_components.ts PJ7OUutWRrSHW6qgaPNW1l",
    "component::add::main": "ts-node --project ./tsconfig.node.json -O '{\"module\": \"commonjs\", \"target\":\"es6\"}'  node_modules/.bin/yo ./generator --figma --test --story --root='src/lib'",
    "component::add::local": "ROOT=$(pwd) && ts-node --project ./tsconfig.node.json -O '{\"module\": \"commonjs\", \"target\":\"es6\"}'  node_modules/.bin/yo ./generator --root=$ROOT"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.21",
    "@storybook/addon-essentials": "^6.4.21",
    "@storybook/addon-interactions": "^6.4.21",
    "@storybook/addon-jest": "^6.4.22",
    "@storybook/addon-links": "^6.4.21",
    "@storybook/builder-vite": "^0.1.28",
    "@storybook/react": "^6.4.21",
    "@storybook/testing-library": "^0.0.9",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.1",
    "@types/react": "^17.0.10",
    "@types/react-dom": "^17.0.10",
    "@types/yeoman-generator": "^5.2.10",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vitejs/plugin-react": "^1.0.7",
    "babel-loader": "^8.2.4",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-mdx": "^1.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-mdx": "^1.17.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "figma-api": "^1.10.1",
    "fuse.js": "^6.6.2",
    "husky": ">=6",
    "isomorphic-unfetch": "^3.1.0",
    "lint-staged": ">=10",
    "storybook-addon-designs": "^6.2.1",
    "stylelint": "^14.8.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.0",
    "vite-plugin-dts": "^1.0.5",
    "vite-plugin-dynamic-import": "^0.9.3",
    "vite-plugin-eslint": "^1.6.0",
    "yeoman-generator": "^5.6.1",
    "yo": "^4.3.0"
  },
  "lint-staged": {
    "**/*.ts?(x)": "bash -c tsc -p ./tsconfig.json --noEmit",
    "**/*.{ts, tsx, mdx}": "eslint --cache --fix",
    "*.?(s)css": [
      "stylelint --fix",
      "stylelint"
    ]
  }
}
